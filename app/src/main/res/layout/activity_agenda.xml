<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".vista.agenda">

    <LinearLayout
        android:id="@+id/titleDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Titulo" />

        <EditText
            android:id="@+id/editTextdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/Descripcion" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleDescriptionLayout"
        android:layout_marginTop="16dp"
        android:text="Buscar Nombre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnBuscarNombre"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnEliminarMedicamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar Medicamento" />

        <Button
            android:id="@+id/btnRegistrarMedicamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registrar Medicamento" />
    </LinearLayout>

    <ListView
        android:id="@+id/listviewMedicamento"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="306dp"
        android:layout_marginBottom="0dp" />
</RelativeLayout>
