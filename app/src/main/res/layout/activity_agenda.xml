<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="16dp"
    tools:context=".vista.agenda">

    <LinearLayout
        android:id="@+id/titleDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:hint="@string/Titulo"
            android:textColor="@color/white"
            android:textColorHint="#F1EDED" />

        <EditText
            android:id="@+id/editTextdescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/Descripcion"
            android:textColor="#F4F2F2"
            android:textColorHint="#F4EFEF" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuscarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleDescriptionLayout"
        android:layout_marginTop="16dp"
        android:text="Buscar Nombre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnBuscarNombre"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnEliminarMedicamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar Medicamento" />

        <Button
            android:id="@+id/btnRegistrarMedicamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registrar Medicamento" />
    </LinearLayout>


    <ListView
        android:id="@+id/listviewMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="406dp"
        android:layout_above="@id/add"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:textColor="#121111"
        tools:ignore="NotSibling" />
        <!-- Agrega esta lÃ­nea para cambiar el color de fondo a blanco -->
</RelativeLayout>
