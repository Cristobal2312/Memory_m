<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente"
    android:foregroundTint="#090808"
    tools:context=".vista.Registro">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/CrearCuentaTXT"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loginIcon.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            app:boxBackgroundColor="#7A7979">

            <EditText
                android:id="@+id/NombreEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icono_nombres"
                android:drawablePadding="10dp"
                android:drawableTint="#0C0C0C"
                android:hint="@string/NombreEt"
                android:hyphenationFrequency="normal"
                android:inputType="textPersonName|textCapWords"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHighlight="#0B0B0B"
                android:textColorHint="#101010"
                android:textColorLink="#0E0E0E" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="#7A7979">

            <EditText
                android:id="@+id/CorreoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icono_correo"
                android:drawablePadding="10dp"
                android:drawableTint="#101010"
                android:hint="@string/CorreoEt"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="#070707" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="#7A7979"
            app:hintEnabled="false"

            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/Contrase単aEt"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icono_password"
                android:drawablePadding="10dp"
                android:drawableTint="#090909"
                android:hint="@string/Contrase単aEt"
                android:inputType="textPassword"
                android:outlineAmbientShadowColor="#050505"
                android:outlineSpotShadowColor="#0C0C0C"
                android:padding="24dp"
                android:shadowColor="#0C0C0C"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:foregroundTint="#090909"
            android:textColorHint="#0B0A0A"
            app:boxBackgroundColor="#7A7979"
            app:boxStrokeColor="#070707"
            app:endIconTint="#050505"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/ConfirmarContrase単aEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icono_password"
                android:drawablePadding="10dp"
                android:drawableTint="#0C0C0C"
                android:foregroundTint="#121111"
                android:hint="@string/ConfirmarContrase単aEt"
                android:inputType="textPassword"
                android:padding="20dp"
                android:shadowColor="#1C1B1B"
                android:textColor="@color/black"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/RegistroUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/RegistroUsuario"
            android:textSize="10sp"
           android:textColor="@color/white"
            android:backgroundTint="@color/blue_button"
            />

        <TextView
            android:id="@+id/TengocuentaTXT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/TengounacuentaTXT"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>